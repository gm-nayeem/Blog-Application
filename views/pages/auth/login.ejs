<%- include('../../partials/header.ejs') %>

    <div class="container my-container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <h4 class="mb-3">Login To Your Account</h4>
                    <form action="/auth/login" method="post">
                        <div class="form-group">
                            <label for="email">Enter Your Valid Email</label>
                            <input type="email" name="email" id="email" class="form-control form-style <%=
                            error.email ? 'is-invalid' : '' %>">
                            <div class="invalid-feedback">
                                <%= error.email && error.email %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Enter A Strong Password</label>
                            <input type="password" name="password" id="password" class="form-control form-style <%=
                            error.password ? 'is-invalid' : '' %>">
                            <div class="invalid-feedback">
                                <%= error.password && error.password %>
                            </div>
                        </div>
                        <div>
                            <input type="submit" class="btn btn-primary" value="Login">                         
                        </div>
                    </form>
                    <div class="mt-3 mb-3 text-center">
                        <a href="/auth/signup" style="text-decoration: none"> Don't have an Account? Create One</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>