<%- include('../../partials/header.ejs') %>

    <div class="container my-container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <h4 class="mb-3">Create A New Account</h4>
                    <form action="/auth/signup" method="post">
                        <div class="form-group">
                            <label for="username">Enter Your User Name (Must Be Uniq)</label>
                            <input type="text" name="username" id="username" class="form-control form-style <%= 
                            error.username ? 'is-invalid' : '' %>" value="<%= value.username ? value.username : '' %>">
                            <div class="invalid-feedback">
                                <%= error.username && error.username %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">Enter Your Valid Email</label>
                            <input type="email" name="email" id="email" class="form-control form-style <%= 
                            error.email ? 'is-invalid' : '' %>" value="<%= value.email ? value.email : '' %>">
                            <div class="invalid-feedback">
                                <%= error.email && error.email %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Enter A Strong Password</label>
                            <input type="password" name="password" id="password" class="form-control form-style <%= 
                            error.password ? 'is-invalid' : '' %>" value="<%= value.password ? value.password : '' %>">
                            <div class="invalid-feedback">
                                <%= error.password && error.password %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control form-style <%= 
                            error.confirmPassword ? 'is-invalid' : '' %>">
                            <div class="invalid-feedback">
                                <%= error.confirmPassword && error.confirmPassword %>
                            </div>
                        </div>
                        <div>
                            <input type="submit" class="btn btn-primary" value="Signup">
                        </div>
                    </form>
                    <div class="mt-3 mb-3 text-center">
                        <a href="/auth/login" style="text-decoration: none"> Already have an Account? Login Here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>