<%- include('../../partials/header.ejs') %>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                   <h5>Lists Of My Bookmarks</h5>
                   <div class="row">
                        <% if(posts.length == 0) { %>
                            <div class="text-center text-muted my-5">
                                <p>You Did Not Bookmarked Any Post</p>
                            </div>
                        <% } else { %>
                            <% for(let post of posts.reverse()) { %>
                                <div class="card col-sm-6 m-3">
                                    <% if(post.thumbnail) { %>
                                        <img src="<%= post.thumbnail %>" alt="<% post.title %>" class="card-image-top mt-3">
                                    <% } %>
                                    <div class="card-body">
                                        <a href="/explorer/<%= post._id %>" style="color: #222">
                                            <h5><%= post.title %></h5>
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                </div>
            </div>
        </div> 
    </div>

<%- include('../../partials/footer.ejs') %>


</body>
</html>

