<%- include('../../../partials/header.ejs') %>

    <div class="container-fluid">

        <div class="row">
            <div class="col-md-10 offset-md-1 my-5">

                <div class="card card-body">
                    <h5>Lists of My Posts</h5>
                    <div class="row">
                        <% if(posts.length == 0) { %>
                            <div class="text-center text-muted">
                                <p>There is no posts avaivalble right now</p>
                                <a href="/posts/create-post" class="btn btn-primary btn-sm">Create Post Now</a>
                            </div>
                        <% } else { %>
                            <% for(let post of posts.reverse()) { %>
                                <div class="card col-sm-3 m-3">
                                    <% if(post.thumbnail) { %>
                                        <img style="height: 200px" src="<%= post.thumbnail %>" alt="<% post.title %>" class="card-image-top mt-3">
                                    <% } %>
                                    <div class="card-body p-0">
                                        <a href="/posts/edit-post/<%= post._id %>" style="color: #222">
                                            <p class="mt-2 mb-4"><%= post.title %></p>
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                
            </div>

        </div>

    </div>


<%- include('../../../partials/footer.ejs') %>

</body>
</html>